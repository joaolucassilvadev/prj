@model IEnumerable<EmprestimoModel>

<!DOCTYPE html>
<html>
<head>
    <style>
        /* Your existing styles */
        body {
            margin: 0;
            padding: 0;
            background-image: url('/img/semnome.png');
            background-repeat: no-repeat;
            background-position: center center;
            background-attachment: fixed;
            background-size: cover;
        }

        .custom-links {
            padding: 20px;
            text-align: center;
        }

            .custom-links a {
                text-decoration: none;
                color: #ffffff;
                display: flex;
                align-items: flex-start; /* Align items to the top */
            }

            .custom-links h1 {
                color: #ffffff;
            }

            .custom-links .btn {
                margin-bottom: 10px;
            }
    </style>
</head>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<body>
    <div class="custom-links text-center">
        <div class="row">
            <div class="col-md-6">
                <h1>UNIDADE:</h1>
                <a class="btn btn-primary btn-sm mb-3 rounded-pill d-block" asp-controller="Emprestimo" asp-action="Ambulatorio">
                    <i class="bi bi-hospital mx-2 align-top"></i>AMBULATÓRIO
                </a>
                <a class="btn btn-primary btn-sm mb-3 rounded-pill d-block" asp-controller="Emprestimo" asp-action="Atendimento">
                    <i class="bi bi-hospital mx-2 align-top"></i>ATENDIMENTO
                </a>
                <a class="btn btn-primary btn-sm mb-3 rounded-pill d-block" asp-controller="Emprestimo" asp-action="Oncologia">
                    <i class="bi bi-hospital mx-2 align-top"></i>ONCOLOGIA
                </a>
                <a class="btn btn-primary btn-sm mb-3 rounded-pill d-block" asp-controller="Emprestimo" asp-action="ServicoSocial">
                    <i class="bi bi-hospital mx-2 align-top"></i>SERVIÇO SOCIAL
                </a>
                <a class="btn btn-primary btn-sm mb-3 rounded-pill d-block" asp-controller="Emprestimo" asp-action="Acolhimento">
                    <i class="bi bi-hospital mx-2 align-top"></i>ACOLHIMENTO
                </a>
            </div>
            <div class="col-md-6">
                <h1>SETORES:</h1>
                <a class="btn btn-primary btn-sm mb-3 rounded-pill d-block" asp-controller="Emprestimo" asp-action="Diagnostico">
                    <i class="bi bi-hospital mx-2 align-top"></i>DIAGNÓSTICO
                </a>
                <a class="btn btn-primary btn-sm mb-3 rounded-pill d-block" asp-controller="Emprestimo" asp-action="Transfusional">
                    <i class="bi bi-hospital mx-2 align-top"></i>AGENCIA TRANSFUSIONAL
                </a>
                <a class="btn btn-primary btn-sm mb-3 rounded-pill d-block" asp-controller="Emprestimo" asp-action="Enfermaria">
                    <i class="bi bi-hospital mx-2 align-top"></i>ENFERMARIA
                </a>
                <a class="btn btn-primary btn-sm mb-3 rounded-pill d-block" asp-controller="Emprestimo" asp-action="ALA">
                    <i class="bi bi-hospital mx-2 align-top"></i>ALA 1
                </a>
                <a class="btn btn-primary btn-sm mb-3 rounded-pill d-block" asp-controller="Emprestimo" asp-action="Uti">
                    <i class="bi bi-hospital mx-2 align-top"></i>UTI
                </a>
            </div>
        </div>
    </div>

    <div class="text-right mb-3">
        <a class="btn btn-success" href="#">Imprimir Resumo da Unidade</a>
    </div>
</body>
</html>

